<!--
  - xscreensaver-style configuration file for Jmol screensaver.
  -->
<screensaver name="jmol" _label="Jmol (Java)">

  <command arg="-root"/>
  
  <command arg="-jar jmol.jar"/>
  
  <command arg="-class org.jmol.screensaver.JmolScreensaver"/>
  
  <file id="jdkhome" _label="Java Home (blank=auto)" arg="-jdkhome %" />

  <select id="color">
    <option id="blue" _label="Blue Line" /> <!-- default -->
    <option id="green" _label="Green Line" arg-set="-color #00ff00" />
    <option id="red" _label="Red Line" arg-set="-color #ff0000" />
  </select>
  
  <_description>
Jmol screensaver to display molecules in 3D.
  </_description>

</screensaver>
